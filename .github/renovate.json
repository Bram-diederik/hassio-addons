{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:base"
  ],
  "rebaseWhen": "behind-base-branch",
  "dependencyDashboard": true,
  "labels": [
    "dependencies",
    "no-stale"
  ],
  "commitMessagePrefix": "⬆️",
  "regexManagers": [
    {
      "fileMatch": [
        "/Dockerfile$",
        "/build.yaml$"
      ],
      "matchStringsStrategy": "any",
      "matchStrings": [
        "ARG BUILD_FROM=(?<depName>.*?):(?<currentValue>.*?)\\s+",
        "(aarch64|amd64|armhf|armv7|i386):\\s[\"']?(?<depName>.*?):(?<currentValue>.*?)[\"']?\\s"
      ],
      "datasourceTemplate": "docker"
    },
    {
      "fileMatch": [
        "/Dockerfile$"
      ],
      "matchStrings": [
        "RUN wget https://github.com/Requarks/wiki/releases/download/?(?<currentValue>.+?)?\\s+"
      ],
      "datasourceTemplate": "github-releases",
      "depNameTemplate": "requarks/wiki"
    },
    {
      "fileMatch": [
        "/Dockerfile$"
      ],
      "matchStrings": [
        "RUN wget https://github.com/42wim/matterbridge/archive/refs/tags/?(?<currentValue>.+?)?\\s+"
      ],
      "datasourceTemplate": "github-releases",
      "depNameTemplate": "42wim/matterbridge"
    }
  ],
  "packageRules": [
    {
      "groupName": "Add-on base image",
      "matchDatasources": [
        "docker"
      ],
      "matchDepNames": [
        "ghcr.io/hassio-addons/base"
      ],
      "automerge": true,
      "ignoreTests": true
    },
    {
      "groupName": "Add-on Debian base image",
      "matchDatasources": [
        "docker"
      ],
      "matchDepNames": [
        "ghcr.io/hassio-addons/debian-base"
      ],
      "automerge": true,
      "ignoreTests": true
    },
    {
      "groupName": "Add-on python base image",
      "matchDatasources": [
        "docker"
      ],
      "matchDepNames": [
        "ghcr.io/hassio-addons/base-python"
      ],
      "automerge": true,
      "ignoreTests": true
    },
    {
      "groupName": "Wiki.JS",
      "matchDatasources": [
        "github-releases"
      ],
      "matchDepNames": [
        "requarks/wiki"
      ],
      "automerge": true
    },
    {
      "groupName": "Matterbridge",
      "matchDatasources": [
        "github-releases"
      ],
      "matchDepNames": [
        "42wim/matterbridge"
      ],
      "automerge": true
    }
  ]
}